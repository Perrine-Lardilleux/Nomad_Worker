<div class="adjust" style="height:100px"></div>
<h1 style="text-align: center; font-size: 30px; font-weight: bold; color: #c57b57;">Cost of Living Estimator</h1>
<div class="container my-4">
  <div id="data" data-city="<%= @city.to_json %>" class="row justify-content-around">
    <% @city.data.each do |category, values| %>
    <div class="col-1">
      <label for="pet-select"><%= category.capitalize %>:</label>
      <select class="selects">
        <optgroup label="<%= category %>">
          <% values.each do |subcategory| %>
            <option value="<%= subcategory[0] %>"><%= subcategory[0] %></option>
          <% end %>
        </optgroup>
      </select>
      </div>
    <% end %>
    <div style="position: absolute; top: 800px">
      <select id="comparator">
        <label>Compare with:</label>
        <optgroup label="Compare with: ">
          <option value="none">none</option>
          <% @cities.each do |city| %>
            <option value="<%= city.id %>"><%= city.name %></option>
          <% end %>
        </optgroup>
      </select>
    </div>
  </div>

  <div id="chart-container" class="mt-5">
    <canvas id="myChart" width="400" height="150">
    </canvas>
  </div>
  <div class="common-search">
    <a href="" class="btn btn-primary" id="economical-search">Economical Search</a>
  </div>
  <div id="result" class="my-5">
    <h3>Prices:</h3>
  </div>
  <div id="doughnut-container" class="mt-5">
    <canvas id="myDoughnutChart" width="400" height="150">
    </canvas>
  </div>
</div>
