<% photo = 'https://res.cloudinary.com/dm71o2t6v/image/upload/v1623952626/P1020324_acghqt.jpg' %>
<div class="banner d-flex flex-column justify-content-center align-items-center navbar-trigger" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url("<%= cl_image_tag photo, crop: :fill%>");'>

  <%#= cl_video_tag("hero_imieze", autoplay: :autoplay, loop: :loop, muted: :muted, id: 'myVideo') if request.path == '/'%>
  <div class = "content align-items-center justify-content-center " id = 'banner-content'>
      <h1><strong>🌏 Work from</strong> anywhere in <strong>the world</strong></h1>
      <p> get sharp cost of living estimates according to your lifestyle 💰</p>
    <div class=" col-12 m-0 " >
      <%= link_to "Go nomad 💻 ", cities_path, class:'btn btn-round btn-flat-home' %>
    </div>
  </div>
</div>

<div class="adjust" style="height:60px"></div>
<%= render partial: 'pages/carousel', cached: true %>
<div class="row justify-content-center pb-4" style="color: black;">
  <%= link_to "Explore nomad hubs", cities_path, class:'btn-round' %>
</div>


<div id="map" class="my-5 ml-auto mr-auto"
    style="width: 75vw; height: 500px; border-top: 1px solid #efe6dd;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<%= render partial: 'pages/features_cards', cached: true %>
<%= render partial: 'pages/socialproof', cached: true %>

<div class="row justify-content-center pb-4" style="color: black;">
  <%= link_to "Nomadize now", cities_path, class:'btn-round' %>
</div>

