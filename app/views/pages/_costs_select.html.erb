<div id="data" data-city="<%= city.to_json %>" class="row justify-content-between">
  <% city.data.each do |category, values| %>
  <div class="col-1">
    <label for="pet-select"><%= category.capitalize %>:</label>
    <select class="selects">
      <optgroup label="<%= category %>">
        <% values.each do |subcategory| %>
          <% if subcategory.split('_')[1] === 'transportation' %>
            <option value="<%= subcategory[0] %>"><%= subcategory.split('_')[0] + ' ' +  subcategory.split('_')[1] %></option>
          <% else %>
            <option value="<%= subcategory[0] %>"><%= subcategory[0].capitalize %></option>
          <% end %>
        <% end %>
      </optgroup>
    </select>
    </div>
  <% end %>
</div>
