

<div class="container mt-4 mb-3">
  <br>
  <div class="question" style="text-align: center; font-size: 24px;">
    Where is your next stop?
  </div>
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>
<div id="map"
     style="width: 100%; height: 450px; margin-bottom: 70px; border-top: 1px solid #efe6dd;"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="container my-4">
  <div class="cards">
    <% @cities.each do |city| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?travel)">
        <div class="link">
          <%= link_to city.name, city_path(city) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

