<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?<%= @city.name %>,landscape);">
  <div class="container link navbar-trigger">
    <h1><strong><%=@city.name%> </strong></h1>
    <p><br><strong><%=@city.country.name%></strong></p>
    <div id="wishlists">
      <%= render partial: "cities/wishlists" %>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="content mb-5" id="menu">
    <%= render partial: "cities/show_menu" %>
    <%= render partial: "cities/city_info", locals: { city: @city } %>
    <%= render partial: "cities/weather", locals: { city: @city } %>
    <%= render partial: "cities/coworking", locals: { city: @city } %>
    <div class="row">
      <%= render partial: "cities/costs_card", locals: { city: @city } %>
      <%= render partial: "cities/send_info", locals: { city: @city } %>
    </div>
    <%= render partial: "cities/reviews", locals: { city: @city } %>
  </div>
  <%= link_to 'Back', cities_path, class:"btn-flat" %>
</div>
